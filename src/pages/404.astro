---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
---

<Layout title="Page Not Found | Haymarket Bicycles" description="Sorry, the page you're looking for doesn't exist. Return to Haymarket Bicycles to find premium bikes, expert service, and cycling resources in Haymarket and Gainesville, VA.">
  <main class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-xl">
      <h1 class="text-4xl font-bold mb-6">Page Not Found</h1>
      <p class="text-lg text-muted-foreground mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button asChild>
          <a href="/">Return Home</a>
        </Button>
        <Button variant="outline" asChild>
          <a href="/contact">Contact Us</a>
        </Button>
      </div>
    </div>
  </main>
</Layout>